/* pages/search/search.wxss */
.searchBox{
  width:100%;
  height:auto;
  padding:20rpx 30rpx;
  box-sizing: border-box;
}
.searchBox .inputBox{
  width:100%;
  height:80rpx;
  background: #f8f8f8;
  border-radius:4px;
  line-height: 80rpx;
  padding-left:20rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
}
.searchBox .inputBox input{
  width:91%;
  height:100%;
  display: inline-block;
  vertical-align: top;
}

.companyList{
  background:#f8f8f8;
}
.searchBox  .searchTitle{
  margin:50rpx 0 20rpx;
  width:100%;
  border-left:4px solid #4d80f0;
  color:#000;
  font-size:30rpx;
  padding-left:20rpx;
  box-sizing:border-box;
}
.searchBox .listInput{
  width:100%;
  height:90rpx;
  margin:30rpx auto;
  align-items: center;
  padding:10rpx 20rpx;
  box-sizing:border-box;
  background-color: #f8f8f8;
  display: flex;
  justify-content: space-between;
}
.listInput>picker{
  width:90%;
  text-align: left;
  height:100%;
  line-height: 70rpx;
  position: relative;
}
.listInput>picker .selector{
  width:30rpx;
  position:absolute;
  z-index: 9;
  top:0;
  bottom:0;
  right:20rpx;
  margin:auto;
}
.listInput>image{
  width:40rpx;
}
.listInput input{
  width:90%;
  text-align:left;
}

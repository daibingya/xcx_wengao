/* pages/details/details.wxss */
page{
  background: #fff
}
.detailsBox{
  width:100%;
  height:auto;
  padding:20rpx 30rpx;
  box-sizing:border-box;
}
.detailsBox .list{
  width:100%;
  display: flex;
  padding:20rpx 0;
  border-bottom: 1px solid #e1e1e1;
  color:#4a4747;
  font-size:28rpx;
  background:rgba(0,0,0,0);
}
.detailsBox .list text:first-child{
  font-size:30rpx;
  margin-right:10rpx;
}
.detailsBox .list:last-of-type{
  display: block;
  border:0
}
.cotentBox{
  margin-top:20rpx;
  line-height: 45rpx;
  text-indent: 40rpx;
}
.detailsBox .list picker{
  flex:1;
  position: relative;
  box-sizing:border-box;
}
.detailsBox .list picker .xiala{
  width:25rpx;
  height:15rpx;
  position: absolute;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.textareaBox{
  margin-top:20rpx;
  border:0;
  width:100%;
  height:550rpx;
  padding:5rpx;
  box-sizing:border-box;
}
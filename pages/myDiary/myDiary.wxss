/* pages/myDiary/myDiary.wxss */
.container{
  width:100%;
  height:100%;
  padding:20rpx;
  box-sizing: border-box;
}
.contentBox{
  margin-top:20rpx
}
/* 搜索栏目 */
.container .inputBox{
  width:100%;
  height:80rpx;
  background: #4d80f0;
  border-radius:10rpx;
  padding-left:10rpx;
  box-sizing:border-box;
  color:#fff;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}
.sentenceBox .contentBox{
  width:100%;
  margin-top:100rpx;
}
.sentenceBox .tips{
  margin-top: 200rpx;
  text-align: center;
}
.sentenceBox .tips image{
  width:260rpx;
}
.sentenceBox .tips .textTip{
  font-size:28rpx;
  color:rgb(117, 117, 117)
}
.timeBox{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.timeBox .time{
  display: flex;
  font-size:26rpx;
  color:#999999;
  align-items: center;
}
.timeBox .time image{
  width:25rpx;
  height:25rpx;
  margin-right:10rpx
}
.timeBox .caozuo{
  display: flex;
}
.timeBox .caozuo text{
  font-size:26rpx;
  width:120rpx;
  text-align:center;
}
.icon-icon-edit{
  color:#959cf7
}
.icon-shanchu{
  color:#ecac6c;
}
.icon-fenxiang{
  color:#e57971;
}
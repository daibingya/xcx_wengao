/* pages/user/user.wxss */

.user_content{
  width:100%;
  margin:auto;
}
.user_content .imageBack{
  width:100%;
  height:400rpx;
  padding:0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.user_content .imageBack>image{
  position: absolute;
  left:0;
  right:0;
  top:0;
  width:100%;
  height:350rpx;
  z-index: 1;
}
.user_content .postBox{
  left:30rpx;
  right:30rpx;
  bottom:0;
  height:265rpx;
  position: absolute;
  z-index: 9;
  border-radius:4rpx;
  background:#fff;
}

.user_content .postBox .userImage_Box{
  width:125rpx;
  height:125rpx;
  border-radius:50%;
  border:2px solid #fff;
  position: absolute;
  top:-62.5rpx;
  left:0;
  display:block;
  right:0;
  background-color:#4d80f0;
  margin:auto;
  text-align: center;
  overflow: hidden;
}
.userImage_Box>image{
  width:50rpx;
}

/* 用户 */
.userNameBox{
  text-align: center;
  margin-top:80rpx;
  position: relative
}
.userNameBox .name{
  font-size:36rpx;
  font-weight: bold;
  margin-left:30rpx;
}
.user_content .postBox .userNameBox .userEditor{
  width:28rpx;
  height:28rpx;
  margin-left:10rpx;
}

.userMesage{
  width:100%;
  padding:10px 35rpx;
  box-sizing:border-box;
  font-size:0;
}
.userMesage>view{
  width:100%;
  font-size:28rpx;
  display: flex;
  align-items: center;
  vertical-align: top;
  justify-content: space-between;
  height:50rpx;
  line-height:50rpx;
  color:#3e3e3e;
}
.userMesage>view.left:first-child image{
  width:38rpx;
}
.userMesage>view.left>view{
  display:flex;
  align-items: center;
}
.userMesage>view.left image{
  width:35rpx;
  height:20rpx;
  margin-right:20rpx;
}
.userMesage>view.left .lastText{
  color:#8d8d8d;
}



.listContet{
  width:100%;
  padding:20rpx 30rpx;
  box-sizing: border-box;
}

.listContet .listNode{
  width:100%;
  background:#fff;
  margin-top:20rpx;
  border-radius:4rpx;
  padding:10rpx 30rpx;
  box-sizing: border-box;
}
.listContet .listNode .listText{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  color:#8d8d8d;
}
.dashedLine{
  width:100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:1px dashed #e1e1e1;
}
.listContet .listNode .listText:last-child .dashedLine{
  border-bottom:0;
}
.listContet .listNode .listText .leftCont{
  display: flex;
  align-items: center;
  color:#000;
}
.listContet .listNode .listText .listTitle{
  font-size:30rpx;
}
.listContet .listNode .listText .leftCont>image{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}
.dashedLine .returnImages{
  width:24rpx;
}
<!--pages/search/search.wxml-->
<view class="searchBox">
    <!-- 搜索栏 -->
    <view class="inputBox">
      <input bindfocus='breakTosearch' placeholder='请输入关键字进行搜索'></input>
    </view>

    <!-- 精准检索 -->
    <view class="searchTitle">精准检索</view>
    
    <!-- 发布时间 -->
    <view class="listInput">
      <image src="/image/login/time.png" mode='widthFix'></image>
      <picker mode="date" start="2015-09-01" end="2017-09-01" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <text wx:if="{{!array[index]}}" style="color:gray">请选择发布时间</text>
          <text  style="color:#000">{{array[index]}}</text>
          <image class="selector" src="/image/login/xiala.png" mode='widthFix'></image>
      </picker>
    </view>

     <!-- 录入时间 -->
    <view class="listInput">
      <image src="/image/login/time.png" mode='widthFix'></image>
      <picker mode="date" start="2015-09-01" end="2017-09-01" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <text wx:if="{{!array[index]}}" style="color:gray">请选择录入时间</text>
          <text  style="color:#000">{{array[index]}}</text>
          <image class="selector" src="/image/login/xiala.png" mode='widthFix'></image>
      </picker>
    </view>

    <!-- 文稿级别 -->
    <view class="listInput">
      <image src="/image/login/class.png" mode='widthFix'></image>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <text wx:if="{{!array[index]}}" style="color:gray">请选择文稿级别</text>
          <text  style="color:#000">{{array[index]}}</text>
          <image class="selector" src="/image/login/xiala.png" mode='widthFix'></image>
      </picker>
    </view>

    <!-- 单位 -->
    <view class="listInput">
      <image src="/image/login/danwei.png" mode='widthFix'></image>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <text wx:if="{{!array[index]}}" style="color:gray">请选择录入单位</text>
          <text  style="color:#000">{{array[index]}}</text>
          <image class="selector" src="/image/login/xiala.png" mode='widthFix'></image>
      </picker>
    </view>

    <!-- 类型 -->
    <view class="listInput">
      <image src="/image/login/danwei.png" mode='widthFix'></image>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <text wx:if="{{!array[index]}}" style="color:gray">请选择类型</text>
          <text  style="color:#000">{{array[index]}}</text>
          <image class="selector" src="/image/login/xiala.png" mode='widthFix'></image>
      </picker>
    </view>

    <view class="flexBox">
        <view class="cancel">取消</view>
        <view class="Determine">查询</view>
    </view> 
</view>

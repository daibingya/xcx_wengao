/* pages/details/details.wxss */
page{
  background: #fff
}
.detailsBox{
  width:100%;
  height:auto;
  padding:20rpx 30rpx;
  box-sizing:border-box;
}
.detailsBox .list{
  width:100%;
  padding:20rpx 0;
  border-bottom: 1rpx solid #e1e1e1;
  color:#4a4747;
  background:rgba(0,0,0,0);
}
.detailsBox .list text:last-child{
  font-size:28rpx;
  display: inline-block;
  width: 73%;
  vertical-align: top;
  word-wrap: break-word;
}
.detailsBox .list:last-child{
  padding:20rpx 0 0;
}
.detailsBox .list text:first-child{
  font-size:30rpx;
  margin-right:10rpx;
  vertical-align: top;
}
.cotentBox{
  margin-top:  35rpx;
  line-height: 45rpx;
  text-indent: 40rpx;
  font-size: 28rpx;
}
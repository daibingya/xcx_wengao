/* login/index.wxss */
.loginBox{
  width:100%;
  height:100%;
}
.loginBox>image{
  width:100%;
  height:50rpx;
}

.postBox{
  width:662rpx;
  position: fixed;
  top:180rpx;
  padding-top:20rpx;
  box-sizing:border-box;
  left:0;right:0;
  margin:auto;
  background:#fff;
  text-align: center;
  border-radius: 4rpx;
  box-shadow:0 0 45rpx 5rpx #eee;
}
.postBox>image{
  width:95%;
  margin-bottom:50rpx;
}
.postBox .listInput{
  width:92%;
  height:90rpx;
  margin:30rpx auto;
  align-items: center;
  padding:10rpx 20rpx;
  box-sizing:border-box;
  background-color: #f8f8f8;
  display: flex;
  justify-content: space-between;
}
.listInput>picker{
  width:90%;
  text-align: left;
  height:100%;
  line-height: 70rpx;
  position: relative;
}
.listInput>picker .selector{
  width:30rpx;
  position:absolute;
  z-index: 9;
  top:0;
  bottom:0;
  right:20rpx;
  margin:auto;
}
.listInput>image{
  width:40rpx;
}
.listInput input{
  width:90%;
  text-align:left;
}

.checkbox{
  width:92%;
  margin:auto;
  text-align:left;
  color:#0d58ff;
}
.checkbox checkbox{
  transform: scale(0.6,0.6);
}

.buttonBox{
  width:92%;
  border-radius:6rpx;
  background-color:#4d80f0;
  text-align: center;
  line-height:100rpx;
  height:100rpx;
  color:#fff;
  font-size:40rpx;
  margin:40rpx auto 100rpx;
}
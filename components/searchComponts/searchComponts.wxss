/* components/search/search.wxss */
.search{
  position: fixed;
  left:30rpx;
  right:30rpx;
  top:0;
  padding:20rpx 0;
  padding-bottom:0;
  box-sizing:border-box;
  background: #edf2f3;
  z-index: 99;
}
.search .inputBox{
  width:100%;
  height:80rpx;
  background: #fff;
  border-radius:4px;
  line-height: 80rpx;
  padding-left:20rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
  position: relative;
}
.search .inputBox input{
  width:100%;
  height:100%;
  display: inline-block;
  vertical-align: top;
}
.search .inputBox .hiddenMark{
  position: absolute;
  left:0;
  right:0;
  top:0;
  margin:auto;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0);
  z-index: 9;
}